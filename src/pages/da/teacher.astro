---
import Website from "../../layouts/Website.astro";
import { getTranslationsHelpers, LANGUAGE_CODES } from "../../core/translation";

const lang = "da";

const { t, T } = getTranslationsHelpers(lang)

import {Content} from '../../core/translations/da/teacher.md';
---

<Website lang={lang}>
  <main>
    <div class="container bg-body pb-4">

      <section class="row px-5 pt-5 mb-5">
        <h1>
          <img class="text-left shadow mb-2" src={`${import.meta.env.BASE_URL}img/vandolie-logo-teaching.svg`} alt="Logo" height="128" />
          <br>
          {t("website-teacher")}
        </h1>
      </section>

      <section class="vdl-markdown-content px-5">
        <Content />
      </section>

    </div>
    
  </main>
</Website>
